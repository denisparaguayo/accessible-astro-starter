---
import Navigation from '../components/Navigation.astro'
import { DarkMode, SkipLink } from 'accessible-astro-components'
import { Icon } from 'astro-icon/components'
---

<header>
	<SkipLink />
	<Navigation>
		<li class="menu-item">
			<a href="/posiciones" class="text-gray-700 transition-colors duration-300 hover:text-blue-500">Posiciones</a>
		</li>
		<li class="menu-item">
			<a href="/pilotos" class="text-gray-700 transition-colors duration-300 hover:text-blue-500">Pilotos</a>
		</li>
		<li class="menu-item">
			<a href="/escuderias" class="text-gray-700 transition-colors duration-300 hover:text-blue-500">Escuderías</a>
		</li>
		<li class="menu-item">
			<a href="/tiempos" class="text-gray-700 transition-colors duration-300 hover:text-blue-500">Tiempos</a>
		</li>
		<li class="menu-item">
			<a href="/galeria" class="text-gray-700 transition-colors duration-300 hover:text-blue-500">Galería</a>
		</li>
		<li class="menu-item highlight">
			<a
				href="/proxima-fecha"
				class="rounded bg-blue-500 px-4 py-2 font-bold text-white shadow-md transition-colors duration-300 hover:bg-blue-700">
				Próxima Fecha
			</a>
		</li>
		<li class="menu-item type-icon animate-rotate">
			<a
				href="https://www.instagram.com/fcup_py/"
				target="_blank"
				rel="noopener noreferrer"
				class="text-gray-700 transition-colors duration-300 hover:text-blue-500">
				<Icon name="lucide:instagram" size="30" class="inline-block align-middle" />
				<span class="sr-only">Instagram de @formuleros_py</span>
			</a>
		</li>
		<li class="menu-item type-icon animate-rotate">
			<DarkMode>
				<Icon
					name="lucide:moon"
					slot="light"
					class="inline-block align-middle text-gray-700 transition-colors duration-300 hover:text-yellow-500"
				/>
				<Icon
					name="lucide:sun"
					slot="dark"
					class="inline-block align-middle text-gray-700 transition-colors duration-300 hover:text-yellow-500"
				/>
			</DarkMode>
		</li>
	</Navigation>
</header>

<style lang="scss" is:global>
	header {
		.type-icon {
			display: block;
			margin-inline: -7px;

			svg {
				inline-size: 30px;
				block-size: 30px;
			}
		}
	}
</style>
